extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
    
      label(for='name') Item name:
      input#name.form-control(type='text', placeholder='Rice, Chicken etc.' name='name' value=(undefined===item ? '' : item.name) required='true' )

      label(for='description') Description:
      input#description.form-control(type='text', placeholder='whole wheat ceareal blend' name='description' value=(undefined===item ? '' : item.description) required='true' )

      label(for='category') Category:
      select#category.form-control(type='select', placeholder='Select category' name='category' required='true' )
        for category in categories
          if item
            option(value=category._id selected=(category._id.toString()===item.category[0]._id.toString() ? 'selected' : false) ) #{category.name}
          else
            option(value=category._id) #{category.name}

      label(for='price') Price:
      input#price.form-control(type='float', placeholder='19.99' name='price' value=(undefined===item ? '' : item.price))

      label(for='numInStock') Quantity:
      input#price.form-control(type='number', placeholder='3' name='numInStock' value=(undefined===item ? '' : item.numInStock))

    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
